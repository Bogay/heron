{
  "extends": [
    "config:base", ":automergePatch", "schedule:weekends", ":semanticCommitTypeAll(chore)"
  ],
  "labels": ["dependencies"],
  "packageRules": [
    {
      "matchPackagePatterns": ["^bevy"],
      "groupName": "bevy"
    },
    {
      "matchPackagePatterns": ["^rapier(2|3)d$"],
      "groupName": "rapier"
    },
    {
      "matchDepTypes": ["dev-dependencies"],
      "automerge": true
    }
  ]
}
